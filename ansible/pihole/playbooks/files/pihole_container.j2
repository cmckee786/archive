[Unit]
Description=rootless pihole container

[Container]
Image=docker.io/pihole/pihole:latest
ContainerName=pihole
Pod=pihole_rootless.pod
AutoUpdate=registry

Pull=never
Timezone=local
Environment="FTLCONF_webserver_api_password={{ pihole_secret }}"
Environment="FTLCONF_dns_upstreams=cloudflared-cf#5353;cloudflared-goog#5353"

Volume=piholedata:/etc/pihole/:z

[Install]
WantedBy=multi-user.target default.target
